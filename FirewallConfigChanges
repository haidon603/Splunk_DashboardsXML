<form>
  <label>Citrix, F5 and ASA Config Changes</label>
  <description>Configuration change dashboard for platforms</description>
  <search id="citrix_netscaler_changes">
    <query>index=ava_ns_adc sourcetype="citrix:netscaler:syslog" (CMD_EXECUTED set)
| rename Remote_ip as src, Command as command, Status as status | fields _time, dvc, host, src, user event_source event_name status command</query>
    <earliest>$tkn_time.earliest$</earliest>
    <latest>$tkn_time.latest$</latest>
  </search>
  <search id="f5_bigip_changes">
    <query>index=firewall sourcetype="f5:bigip:syslog" 01070417 mcpd  NOT "mcpd-primary"  NOT asm_attack_type  NOT asm_device_sync NOT analytics_realtime_external_report NOT auto_update_schedule NOT nsyncd_status_module_name NOT auto_update_status_name NOT asm_violation NOT classification_updates_installed NOT asm_predefined_policy | fields _time, host, user, client_type, transaction_id, transaction_step, object_type, transaction_change, transaction_status</query>
    <earliest>$tkn_time.earliest$</earliest>
    <latest>$tkn_time.latest$</latest>
  </search>
  <search id="cisco_asa_changes">
    <query>
      index=firewall sourcetype="cisco:asa" (ASA-5-111010 OR ASA-5-111005) tag=change NOT "dir " NOT "no terminal pager" NOT "packet-tracer" NOT 172.16.2.107  | rename field2 as dvc
| bin span=1h _time as time_block
| eval time_block=strftime(time_block, "%Y%m%dT%H%M%S")
| eval time_command=strftime(_time, "%Y-%m-%dT%H:%M:%S") . " - " . command | fields time_command, time_block, dvc, user, src, severity_level
    </query>
    <earliest>$tkn_time.earliest$</earliest>
    <latest>$tkn_time.latest$</latest>
  </search>
  <search id="cisco_vpn_changes">
    <query>
      index=vpnsourcetype="cisco:asa" (ASA-5-111010 OR ASA-5-111005) tag=change NOT "dir " NOT "no terminal pager" NOT "packet-tracer" NOT 172.16.2.107  | rename field2 as dvc
| bin span=1h _time as time_block
| eval time_block=strftime(time_block, "%Y%m%dT%H%M%S")
| eval time_command=strftime(_time, "%Y-%m-%dT%H:%M:%S") . " - " . command | fields time_command, time_block, dvc, user, src, severity_level
    </query>
    <earliest>$tkn_time.earliest$</earliest>
    <latest>$tkn_time.latest$</latest>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="tkn_time">
      <label>Time</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
