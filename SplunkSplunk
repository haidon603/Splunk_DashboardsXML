  <row>
    <panel>
      <title>POST to Splunk indicating new dashboard, alert, report, etc.</title>
      <table>
        <search>
          <query>index=_internal sourcetype=splunkd_ui_access views OR ui OR report method=POST $username_token$  | table user, req_time, file 
 | rename file as "dashboard or report name",  req_time as "edit/viewTime" 
| dedup "dashboard or report name"</query>
          <earliest>$tkn_time.earliest$</earliest>
          <latest>$tkn_time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="user">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="dashboard or report name">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>GETS by user indicating what a user has viewed</title>
      <table>
        <search>
          <query>index=_internal sourcetype=splunkd_ui_access views OR ui $username_token$ method=GET  | table user, req_time, file 
 | rename file as "dashboard or report name",  req_time as "edit/viewTime" 
| stats values("dashboard or report name") by user</query>
          <earliest>$tkn_time.earliest$</earliest>
          <latest>$tkn_time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="user">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Splunk AD Group Activity</title>
      <table>
        <search>
          <query>index=ava_cs_wineventlog sourcetype=WinEventLog EventCode IN (4728, 4729) user!=*$$ AGC00_SPLUNK
| rex field=signature "security-enabled\s(?&lt;group_type&gt;[^\s]+)\sgroup"
| rex field=signature "was\s(?&lt;group_action&gt;[^\s]+)"
| fields src_user user signature dest_nt_domain, user_group, group_type,  _time 
| table src_user user signature dest_nt_domain, user_group, group_type,  _time 
| rename src_user as "User who made the change"</query>
          <earliest>-30d@d</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">2</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="user_group">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
        <format type="color" field="user">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
    </panel>
    <panel>
      <title>Non AD joined accounts created</title>
      <table>
        <search>
          <query>index=_audit action=create_user info=succeeded
| stats values(action), values(_raw) by _time, host, user</query>
          <earliest>$tkn_time.earliest$</earliest>
          <latest>$tkn_time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Skipped searches</title>
      <table>
        <search>
          <query>index=_internal host=splunkinstance.com sourcetype=scheduler SavedSplunker search_type!=datamodel_acceleration $username_token$
| stats count(eval(status="skipped")) as skipped_count, count(eval(status!="skipped")) as run_count, avg(eval(if(status="success", run_time, null()))) as avg_run_time, values(user) as user by savedsearch_name
| eval skip_ratio=round(100 * (skipped_count/run_count), 2)
| eval avg_run_time=round(avg_run_time, 2)
| sort count desc</query>
          <earliest>$tkn_time.earliest$</earliest>
          <latest>$tkn_time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="run_count">
          <colorPalette type="minMidMax" maxColor="#53A051" minColor="#FFFFFF"></colorPalette>
          <scale type="minMidMax"></scale>
        </format>
        <format type="color" field="skip_ratio">
          <colorPalette type="minMidMax" maxColor="#DC4E41" minColor="#FFFFFF"></colorPalette>
          <scale type="minMidMax"></scale>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Alerts in all Splunk Apps</title>
      <table>
        <search>
          <query>| rest /servicesNS/-/-/saved/searches | fields  eai:acl.owner title description search 
| stats values(title) by  eai:acl.owner
| rename title as "Alert Name", eai:acl.owner as "Alert Owner"</query>
          <earliest>$tkn_time.earliest$</earliest>
          <latest>$tkn_time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="Alert Owner">
          <colorPalette type="sharedList"></colorPalette>
          <scale type="sharedCategory"></scale>
        </format>
      </table>
    </panel>
