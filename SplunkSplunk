<form>
  <label>Splunk Splunk</label>
  <description>This dashboard is utilized to obtain information about activity associated with the Splunk platform</description>
  <fieldset submitButton="True" autoRun="False">
    <input type="text" token="username_token">
      <label>Username</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="time" token="tkn_time" searchWhenChanged="true">
      <label>Time Window</label>
      <default>
        <earliest>-4h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Splunk Environment</title>
      <html>
