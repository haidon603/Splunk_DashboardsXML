      <table>
        <search>
          <query>(index=email OR tag=email) recipient_address=AutoReply_Phishing@corp.com OR recipient_address=phishing@corp.com 
(sender_address=$tkn_email$) 
| table sender_address, recipient_address,total_bytes message_subject 
|  dedup message_subject</query>
          <earliest>$tkn_time.earliest$</earliest>
          <latest>$tkn_time.latest$</latest>
        </search>
        <option name="count">6</option>
